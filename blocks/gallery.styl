@require "../css/helpers.styl"
@require "../css/sizes.styl"

.gallery
  position: relative

  &__photo
    width: 100%
    height: 100%

    &--active
      display: block

    &--inactive
      display: none

  &__scroll-button
    z-index: 1

    &--left
      position: absolute
      top: 50%
      widget-background("ui/gallery-button-left.svg", gallery-button-width)
      margin-top: (-@height / 2)

    &--right
      position: absolute
      top: 50%
      right: 0
      widget-background("ui/gallery-button-right.svg", gallery-button-width)
      margin-top: (-@height / 2)

  &--full-width
    width: 100%

  &--full-width-and-height
    width: 100%
    height: 100%
